{
  "manifest_version": 2,
  "name": "Prettify JSON",
  "version": "1.0.0",
  "description": "Prettify any JSON string on a webpage for easy reading.",
  "browser_specific_settings": {
    "gecko": {
      "id": "{bbef878a-de01-414f-b2fe-fd736c32caa1}"
    }
  },
  "permissions": [
    "contextMenus",
    "menus",
    "tabs"
  ],
  "optional_permissions": [
    "<all_urls>"
  ],
  "background": {
    "page": "background.html"
  },
  "browser_action": {
    "default_icon": "icons/inactive.svg",
    "default_title": "Prettify JSON"
  },
  "web_accessible_resources": [
    "assets-manifest.json",
    "runtime.js",
    "contentScript.js",
    "contentScript.css"
  ]
}
